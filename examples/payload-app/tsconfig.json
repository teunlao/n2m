{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react",
    "paths": {
      "payload/generated-types": [
        "./src/payload-types.ts"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "**/node_modules",
    "lib/**/*",
    "dist/**/*"
  ],
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  },
  "references": []
}
