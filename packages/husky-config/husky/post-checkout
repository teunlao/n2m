#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸªrun post-checkout hook"

# Check if the package-lock.json was updated
if git diff --name-only HEAD@{1} HEAD | grep -q "package-lock.json"; then
  echo "ğŸ“¦ package-lock.json was changed. Running npm install to update dependencies..."
  npm install
fi
