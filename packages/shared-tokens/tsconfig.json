{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "types": [
      "node",
      "bun"
    ],
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": "src"
  },
  "references": [
    {
      "path": "../shared-types/tsconfig.json"
    },
    {
      "path": "../core-di/tsconfig.json"
    }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "**/node_modules",
    "lib/**/*",
    "dist/**/*"
  ]
}
