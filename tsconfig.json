{
  "extends": "./tsconfig.base.json",
  "references": [
    {
      "path": "packages/eslint-config/tsconfig.json"
    },
    {
      "path": "packages/husky-config/tsconfig.json"
    },
    {
      "path": "packages/prettier-config/tsconfig.json"
    }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src"
  },
  "exclude": [
    "**/node_modules",
    "lib/**/*",
    "dist/**/*"
  ]
}
